<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment3">

    <!--여기서부터 작업-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:id="@+id/tab_layout_top"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:background="@drawable/backgorund_round_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="토양습도"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="태양조도값"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:background="@drawable/backgorund_round_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1.6"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="600"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>


        </TableLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#a5a5a5"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="@id/tab_layout_top"
            app:layout_constraintStart_toStartOf="@id/tab_layout_top"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_top"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_top"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#a5a5a5"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/tab_layout_top"
            app:layout_constraintStart_toStartOf="@id/tab_layout_top"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_top"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_top"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/black"
            app:tabIndicatorHeight="4dp"
            app:tabTextAppearance="@style/tab_text"
            android:id="@+id/tab_mode"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_top">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="급수모드" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조명모드"/>

        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_check"
            app:layout_constraintTop_toBottomOf="@id/tab_mode">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체크 시 자동모드"
                android:textSize="18sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:id="@+id/tab_layout_center"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_check">

            <TableRow
                android:background="@drawable/backgorund_round_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/tv_value"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="희망값"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_range"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="임계범위"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:background="@drawable/backgorund_round_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1"
                    android:id="@+id/tv_value_1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:id="@+id/tv_value_2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="25"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>


        </TableLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#a5a5a5"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="@id/tab_layout_center"
            app:layout_constraintStart_toStartOf="@id/tab_layout_center"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_center"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#a5a5a5"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/tab_layout_center"
            app:layout_constraintStart_toStartOf="@id/tab_layout_center"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_center"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_center"/>



<!--        bottom graph-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:id="@+id/tab_layout_bottom"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_center">

            <TableRow
                android:background="@drawable/backgorund_round_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="단위일"

                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="지정시간"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="급수시간"
                    android:id="@+id/tv_time_to_status"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tabrow_center"
                android:background="@drawable/backgorund_round_center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="5"
                    android:id="@+id/tv_value_3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:id="@+id/tv_value_4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="08:00"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:id="@+id/tv_value_5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="15"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:background="@drawable/backgorund_round_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="5"
                    android:id="@+id/tv_value_6"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/tv_value_7"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="16:00"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:id="@+id/tv_value_8"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>


        </TableLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#a5a5a5"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="@id/tab_layout_center"
            app:layout_constraintStart_toStartOf="@id/tab_layout_center"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_center"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#a5a5a5"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/tab_layout_center"
            app:layout_constraintStart_toStartOf="@id/tab_layout_center"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_center"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/tab_layout_bottom"
            app:layout_constraintEnd_toEndOf="@id/tab_layout_bottom"
            app:layout_constraintBottom_toBottomOf="@id/tab_layout_bottom"
            app:layout_constraintTop_toTopOf="@id/tab_layout_bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#a5a5a5"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="15dp"
                android:layout_height="match_parent"
                android:background="#a5a5a5" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <!--여기까지만 작업-->
</FrameLayout>